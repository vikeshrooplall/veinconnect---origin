<div class="container mt-1" style="max-width:420px; padding-top:0; margin-top:0;">

  <h4 class="fw-bold text-center mb-3 pt-4">Blood Requests</h4>

  <% @blood_requests.each do |r| %>

    <%= link_to blood_request_path(r), class:"text-decoration-none", style:"color:inherit;" do %>

      <div class="card border-0 shadow-sm mb-4"
           style="background:#FFF1F2; border-radius:18px; max-width:360px; margin:0 auto; cursor:pointer;">

        <div class="card-body p-3">

          <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="small fw-semibold" style="color:#EC1B35;">
              Request #<%= r.id %>
            </span>

            <span class="badge rounded-pill px-3 py-1"
                  style="background:#EC1B35; color:white;">
              Pending
            </span>
          </div>

          <div class="d-flex align-items-center mb-2">

            <div class="d-flex justify-content-center align-items-center me-3"
                 style="width:55px; height:55px; background:white;
                        border:2px solid #EC1B35; border-radius:14px;
                        font-size:1.6rem; font-weight:700; color:#EC1B35;">
              <%= r.blood_type %>
            </div>

            <div class="flex-grow-1">

              <div class="fw-bold" style="font-size:1.05rem; color:#222;">
                <%= r.facility&.name %>
              </div>

              <% urgency_label = {
                "normal"=>"Normal","urgent"=>"Urgent","critical"=>"Critical"
              }[r.urgency] %>

              <% urgency_color = {
                "normal"=>"#3B82F6","urgent"=>"#F59E0B","critical"=>"#DC2626"
              }[r.urgency] %>

              <div style="color:<%= urgency_color %>; font-size:0.9rem;" class="fw-semibold">
                ⚠️ <%= urgency_label %>
              </div>

              <div class="text-muted" style="font-size:0.85rem;">
                Needed by: <%= r.needed_by.strftime('%d %b %Y') %>
              </div>

            </div>
          </div>

          <div class="mt-2 text-secondary d-flex align-items-center flex-wrap"
               style="font-size:0.95rem; gap:8px;">

            <span>
              <i class="bi bi-box-seam"></i>
              <strong><%= r.quantity %></strong> units
            </span>

            <span class="mx-1"></span>

            <span>
              <i class="bi bi-telephone-fill"></i>
              <%= r.patient_phone_number %>
            </span>

            <span class="mx-1"></span>

            <span>
              <i class="bi bi-person-fill"></i>
              <%= r.patient_name %>
            </span>

          </div>

        </div>
      </div>

    <% end %>

  <% end %>

</div>
