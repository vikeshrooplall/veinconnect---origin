<div class="container-fluid">
  <div class="booking-show-container">
    <h2><%="Details of blood request"%></h2>
    <p>Blood Type: <%= @blood_request.blood_type %></p>
    <p>Status: <%= @blood_request.status.humanize %></p>
    <p>Quantity: <%= @blood_request.quantity %></p>
    <p>Needed by: <%= @blood_request.needed_by %></p>
    <p>Hospital Name: <%= @blood_request.facility&.name.presence %></p>
  </div>
</div>

 <div class="blood-request-card">
    <% if current_user.donor? == current_user %>
      <div class="d-flex gap-3">
          <%= button_to "Accept", accept_blood_request_path(@blood_request), method: :patch, class: "btn btn-outline-light" %>
          <%= button_to "Reject", reject_blood_request_path(@blood_request), method: :patch, class: "btn btn-outline-danger" %>
      </div>
    <% end %>

<div class="container chat">
  <h1>Feel free to chat with the patient below </h1>

  <%= turbo_stream_from "thread_Booking_#{@blood_request.id}_messages" %>

  <div id="messages" class="messages">
    <% @blood_request.messages.each do |message| %>
      <%= render "messages/message", message: message %>
    <% end %>
  </div>

  <div class="message-form mt-3">
    <%= simple_form_for [@blood_request, @message],
      html: {
        class: "d-flex gap-2",
        data: {
          controller: "reset-form",
          action: "turbo:submit-end->reset-form#reset"
        }
      } do |f| %>

      <% other_user = current_user == @blood_request.user ? %>

      <%= f.input :body,
        label: false,
        placeholder: "Message #{other_user.first_name}",
        wrapper_html: { class: "flex-grow-1" } %>

      <%= f.submit "Send", class: "btn-light mb-3" %>
    <% end %>
  </div>
