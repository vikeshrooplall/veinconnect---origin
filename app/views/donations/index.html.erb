<div class="container py-4">
  <div class="text-center mb-4">
    <h2 class="fw-bold">Donation History</h2>
    <p class="text-muted">A record of your lifesaving contributions</p>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered align-middle">
      <thead class="table-light">
        <tr>
          <th>Hospital</th>
          <th>Blood Request</th>
          <th>Date</th>
          <th>Status</th>
          <th>Last Updated</th>
        </tr>
      </thead>
      <tbody>
        <% @donations.each do |donation| %>
          <tr>
            <td data-label="Hospital"><%= donation.facility.name %></td>
            <td data-label="Blood Request"><%= donation.blood_request_id %></td>
            <td data-label="Date"><%= donation.created_at.strftime('%d %b %Y') %></td>
            <td data-label="Status"><%= donation.status %></td>
            <td data-label="Last Updated"><%= donation.updated_at.strftime('%d %b %Y') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= link_to 'Back to Blood Requests', blood_requests_path, class: 'btn btn-danger px-4' %>
  </div>
</div>
