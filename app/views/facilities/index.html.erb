<p style='color: green'><%= notice %></p>

<h1>Facilities</h1>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
<ul>
  <% @facilities.each do |facility| %>
  <li>
    <%= facility.id %>
    <%= facility.name %>
    <%= facility.address %>
  <% end %>
  </li>
</ul>
